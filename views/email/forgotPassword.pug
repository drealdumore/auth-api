extends baseEmail

block content
  div(style="padding:48px 32px 32px 32px; border:1px solid #ccd1d6; border-radius:12px; background: #f9fafb;")
    h2(style="margin-bottom:18px; font-size:22px; color:#2d3748; font-weight:700;") Reset Your Password
    p(style="font-size:17px; margin-bottom:14px; color:#444; line-height:1.6;") Hello #{firstName}!
    p(style="font-size:16px; margin-bottom:14px; color:#444; line-height:1.6;") You have requested to reset the password to your account. Click the button below to get started.
    div(style="margin:24px 0;")
      a(href=`${payload}` target='_blank' style="display:inline-block;padding:12px 20px;background-color:#080a0bde;color:#fff;border-radius:5px;text-decoration:none;font-weight:600;font-size:14px;text-align:center;") RESET MY PASSWORD
    p(style="font-size:14px; margin-top:24px; margin-bottom:8px; color:#666;") If you did not initiate this request, please ignore this email.
    p(style="font-size:16px; color:#57584e; margin:0; margin-top:24px;") Thank you.
    p(style="font-size:16px; color:#57584e; margin:0; font-weight:600;") Auth API Team
