extends baseEmail

block content
  div(style="padding:48px 32px 32px 32px; border:1px solid #ccd1d6; border-radius:12px; background: #f9fafb;")
    h2(style="margin-bottom:18px; font-size:22px; color:#2d3748; font-weight:700;") Verify Your Email Address
    p(style="font-size:17px; margin-bottom:14px; color:#444; line-height:1.6;") Hello #{firstName},
    p(style="font-size:16px; margin-bottom:14px; color:#444; line-height:1.6;") Please use the verification code below to verify your email address:
    p(style="color:#010b14; font-size:24px; font-weight:600; margin:24px 0; background:#e6f7ff; border-radius:6px; padding:8px 0; text-align:center;") #{payload}
    p(style="font-size:16px; color:#57584e; margin:0; margin-bottom:14px;") The code will expire in 10 minutes.
    p(style="font-size:15px; color:#57584e; margin:0; margin-bottom:14px; font-style:italic;") If you did not request this, you can safely ignore this email.
    p(style="font-size:16px; color:#57584e; margin:0; margin-top:24px;") Thank you.
    p(style="font-size:16px; color:#57584e; margin:0; font-weight:600;") Auth API Team

